extends ./layout/base

block title
  title Confirm your email address

block content
  table.body-wrap
    tr
      td
      td.container(width='600')
        .content
          table.main(width='100%', cellpadding='0', cellspacing='0')
            tr
              td.alert.alert-warning.
                Warning: You're approaching your limit. Please upgrade.
            tr
              td.content-wrap
                table(width='100%', cellpadding='0', cellspacing='0')
                  tr
                    td.content-block
                      | You have
                      strong 1 free report
                      |  remaining.
                  tr
                    td.content-block.
                      Add your credit card now to upgrade your account to
                      a premium plan to ensure you don't miss out on any reports.
                  tr
                    td.content-block
                      a.btn-primary(href='http://www.mailgun.com') Upgrade my account
                  tr
                    td.content-block
                      | Thanks for choosing Acme Inc.
          .footer
            table(width='100%')
              tr
                td.aligncenter.content-block
                  a(href='http://www.mailgun.com') Unsubscribe
                  |  from these alerts.
      td
